<html>
  <head>
    <link rel="stylesheet" href="/css/stylesheet.css" />
  </head>
  <body id="bg-img">
    <div class="overlay"></div>
    <div id="wrapper">
      <h1 id="mainHeader">Search Results</h1>
      <table id="table">
        <% if(data.universities[0]) {%>
        <tr>
          <% Object.keys(data.universities[0]).forEach((key) => { %> <%if(key
          !=='_id') {%>
          <th><%= key[0].toUpperCase() + key.slice(1) %></th>
          <% }}); %>
        </tr>
        <% for(var i=0; i < data.universities.length; i++) { %>
        <tr>
          <td><%= data.universities[i].name %></td>
          <td><%= data.universities[i].location %></td>
          <td><%= data.universities[i].tuition %></td>
          <td><%= data.universities[i].section %></td>
        </tr>
        <% } %> <% } %>
      </table>

      <input type="button" id="btnExport" value="Export" />
      <form action="/" method="GET">
        <input type="submit" value="Return" class="btnReturn" />
      </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
    <script src="/javascript/exportToPDF.js"></script>
  </body>
  <% include partials/footer %>
</html>
