<html>
  <head>
    <link rel="stylesheet" href="/css/stylesheet.css" />
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  </head>
  <body id="bg-img">
    <div class="overlay"></div>
    <div id="wrapper">
      <h1 id="mainHeader">Search Results</h1>
      <table id="table">
        <% if(data.universities[0]) {%>
        <tr>
          <% Object.keys(data.universities[0]).forEach((key) => { %>
          <th><%= key[0].toUpperCase() + key.slice(1) %></th>
          <% }); %>
        </tr>
        <% for(var i=0; i < data.universities.length; i++) { %>
        <tr dir="rtl" lang="ar">
          <td><%= data.universities[i].notes %></td>
          <td><%= data.universities[i].periodStudy %></td>
          <td><%= data.universities[i].price %></td>
          <td><%= data.universities[i].language %></td>
          <td><%= data.universities[i].educationalLevel %></td>
          <td><%= data.universities[i].branchName %></td>
          <td><%= data.universities[i].collegeName %></td>
          <td><%= data.universities[i].universityName %></td>
        </tr>
        <% } %> <% } %>
      </table>

      <input type="button" id="btnExport" value="Export" />
      <form action="/" method="GET">
        <input type="submit" value="Return" class="btnReturn" />
      </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
    <script src="/javascript/html2canvas.js"></script>
    <script src="/javascript/exportToPDF.js"></script>
  </body>
  <% include partials/footer %>
</html>
