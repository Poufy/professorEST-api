<!DOCTYPE html>
<html>
  <body id="bg-img">
    <head>
      <title>ProfessorEST</title>
      <link rel="shortcut icon" href="favicon.ico" />
    </head>
    <div class="overlay"></div>
    <main id="home">
      <h1 class="lg-heading"><span id="secondary-color">Professor</span>EST</h1>
      <h2 class="sm-heading">
        We Care About <span id="secondary-color">Your</span> Future
      </h2>
      <form class="searchForm" action="/universities" method="GET">
        <div class="formGroup">
          <input
            type="text"
            class="textForm"
            name="universityName"
            placeholder="University..."
            autocomplete="off"
          />
          <input
            type="text"
            class="textForm"
            placeholder="Branch..."
            name="branchName"
            autocomplete="off"
          />
          <input
            type="text"
            class="textForm"
            placeholder="Language..."
            name="language"
            autocomplete="off"
          />
          <input
            type="number"
            class="textForm"
            placeholder="Price..."
            name="price"
            autocomplete="off"
          />
          <input type="submit" class="btnForm" />
        </div>
      </form>
    </main>
  </body>

  <% include partials/footer %>
</html>
